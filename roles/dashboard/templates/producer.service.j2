[Unit]
Description=Kafka Mock BTC Producer
After=network.target kafka.service
Requires=kafka.service

[Service]
User=ec2-user
Group=ec2-user
WorkingDirectory=/opt/dashboard
ExecStart=/usr/bin/python3 /opt/dashboard/producer.py
Restart=always
RestartSec=5
Environment="PYTHONUNBUFFERED=1"

[Install]
WantedBy=multi-user.target
